{
	"name": "@acdh-oeaw/website",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^24"
	},
	"packageManager": "pnpm@10.25.0",
	"scripts": {
		"app:build": "astro build",
		"app:dev": "astro dev",
		"build": "run-s content:build app:build generate:search-index",
		"content:build": "dotenv -c -- tsx ./scripts/content/generate-content.ts build",
		"content:dev": "dotenv -c -- tsx ./scripts/content/generate-content.ts watch",
		"dev": "concurrently --kill-others --names \"content,app\" --prefix-colors \"auto\" \"pnpm:content:dev\" \"pnpm:app:dev\"",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"generate:search-index": "pagefind --site ./dist/",
		"i18n:prepare": "tsx ./scripts/i18n/generate-types.ts",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./src/styles/**/*.@(astro|css)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup types:prepare",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "astro preview",
		"sync": "astro sync",
		"test:e2e": "playwright test --config ./e2e/playwright.config.ts",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "pnpm run test:e2e --ui",
		"test:e2e:update-snapshots": "pnpm run test:e2e --update-snapshots",
		"types:check": "astro check && svelte-check --no-tsconfig",
		"types:prepare": "ENV_VALIDATION=\"disabled\" run-s i18n:prepare sync"
	},
	"dependencies": {
		"@acdh-oeaw/color-schemes": "^0.0.3",
		"@acdh-oeaw/keystatic-lib": "^0.8.0",
		"@acdh-oeaw/lib": "^0.3.5",
		"@acdh-oeaw/mdx-lib": "^0.2.0",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@acdh-oeaw/validate-env": "^0.1.1",
		"@astrojs/rss": "^4.0.14",
		"@astrojs/sitemap": "^3.6.0",
		"@astrojs/svelte": "^7.2.2",
		"@floating-ui/dom": "^1.7.4",
		"@iconify-json/lucide": "^1.2.77",
		"@iconify-json/simple-icons": "^1.2.61",
		"@keystatic/core": "^0.5.48",
		"@mdx-js/mdx": "^3.1.1",
		"@pagefind/default-ui": "^1.4.0",
		"@shikijs/rehype": "^3.19.0",
		"@valibot/i18n": "^1.0.0",
		"astro": "^5.16.3",
		"astro-icon": "^1.1.5",
		"clsx": "^2.1.1",
		"image-size": "^2.0.2",
		"pagefind": "^1.4.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-smartypants": "^3.0.2",
		"sharp": "^0.34.5",
		"shiki": "^3.19.0",
		"svelte": "^5.45.4",
		"use-intl": "^4.5.8",
		"valibot": "^1.2.0",
		"vfile": "^6.0.3",
		"vite": "^6.4.1"
	},
	"devDependencies": {
		"@acdh-oeaw/content-lib": "^0.1.4",
		"@acdh-oeaw/eslint-config": "^2.0.11",
		"@acdh-oeaw/eslint-config-astro": "^2.0.15",
		"@acdh-oeaw/eslint-config-node": "^2.0.11",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.13",
		"@acdh-oeaw/eslint-config-svelte": "^0.0.3",
		"@acdh-oeaw/eslint-config-tailwindcss": "^4.0.1",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.3.2",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@astrojs/check": "^0.9.6",
		"@astrojs/mdx": "^4.3.12",
		"@astrojs/ts-plugin": "^1.10.6",
		"@playwright/test": "^1.57.0",
		"@tailwindcss/vite": "^4.1.17",
		"@types/hast": "^3.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^24.10.1",
		"axe-core": "^4.11.0",
		"axe-playwright": "^2.2.2",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"dotenv-expand": "^12.0.3",
		"eslint": "^9.39.1",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.1",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^16.5.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.7",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.7.4",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-svelte": "^3.4.0",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.26.0",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"unified": "^11.0.5"
	},
	"browserslist": {
		"development": [
			"baseline newly available"
		],
		"production": [
			"baseline widely available"
		]
	},
	"lint-staged": {
		"*.@(astro)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(js|ts|tsx)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|tsx)": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
