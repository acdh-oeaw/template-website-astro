{
	"$schema": "https://www.schemastore.org/tsconfig",
	"extends": ["astro/tsconfigs/base", "@acdh-oeaw/tsconfig"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"],
			"@content/*": ["./.content/generated/*"]
		},
		"plugins": [{ "name": "@astrojs/ts-plugin" }]
	},
	"include": ["./.astro/types.d.ts", "./**/*", "./src/types/**/*.d.ts"],
	"exclude": [".content", "content", "dist", "node_modules", "public"],
	"mdx": {
		"checkMdx": false,
		"plugins": ["remark-frontmatter", "remark-gfm"]
	}
}
