{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": ["astro/tsconfigs/base", "@acdh-oeaw/tsconfig"],
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		]
	},
	"include": ["./**/*"],
	"exclude": ["dist", "node_modules"]
}
