---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
	alt?: string;
	src: ImageMetadata;
}

const { alt = "", src } = Astro.props;
---

<Image
	alt={alt}
	class="w-full overflow-hidden rounded-sm border border-stroke-weak"
	layout="constrained"
	src={src}
/>
