---
import { styles } from "@acdh-oeaw/style-variants";

import type { CalloutKind } from "@/lib/keystatic/component-options";

interface Props {
	/** @default "note" */
	kind: CalloutKind;
	title?: string;
}

const { kind, title } = Astro.props;

const calloutStyles = styles({
	base: "my-4 rounded-md border p-4 text-sm leading-relaxed [&>:first-child]:mt-0 [&>:last-child]:mb-0",
	variants: {
		kind: {
			caution: "",
			important: "",
			note: "",
			tip: "",
			warning: "",
		},
	},
	defaults: {
		kind: "note",
	},
});
---

<aside class={calloutStyles({ kind })}>
	{title ? <strong>{title}</strong> : null}
	<slot />
</aside>
