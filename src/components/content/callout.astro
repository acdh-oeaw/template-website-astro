---
import type { calloutKinds } from "@/lib/content/create-components";
import { variants } from "@/lib/styles";

type CalloutKind = (typeof calloutKinds)[number]["value"];

interface Props {
	kind: CalloutKind;
	title?: string;
}

const { kind, title } = Astro.props;

const calloutStyles = variants({
	base: "my-4 rounded-md border p-4 text-sm leading-relaxed [&>:first-child]:mt-0 [&>:last-child]:mb-0",
	variants: {
		kind: {
			caution: "",
			important: "",
			note: "",
			tip: "",
			warning: "",
		},
	},
	defaultVariants: {
		kind: "note",
	},
});
---

<aside class={calloutStyles({ kind })}>
	{title ? <strong>{title}</strong> : null}
	<slot />
</aside>
