---
import { Icon } from "astro-icon/components";

import SearchDialog from "@/components/search-dialog.svelte";
import { getTranslations } from "@/lib/i18n/get-translations";

const { locale } = Astro.locals;
const t = await getTranslations(locale, "SearchDialog");

const label = t("trigger");
const closeLabel = t("close");
---

<SearchDialog client:idle="svelte" {closeLabel} {label} transition:persist>
	<Fragment slot="search">
		<Icon aria-hidden={true} class="size-4 shrink-0" name="lucide:search" />
	</Fragment>

	<Fragment slot="x">
		<Icon aria-hidden={true} class="size-6 shrink-0" name="lucide:x" />
	</Fragment>
</SearchDialog>
